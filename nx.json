{
  "extends": "nx/presets/npm.json",
  "npmScope": "terenceodonoghue",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build"]
      }
    }
  },
  "targetDependencies": {
    "build": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "prepack": [
      {
        "target": "clean",
        "projects": "self"
      },
      {
        "target": "prepublish",
        "projects": "self"
      },
      {
        "target": "prepack",
        "projects": "dependencies"
      }
    ]
  },
  "affected": {
    "defaultBase": "master"
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  }
}
